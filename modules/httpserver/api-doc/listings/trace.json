{
    "apiVersion": "0.0.1",
    "swaggerVersion": "1.2",
    "basePath": "http://{{Host}}",
    "resourcePath": "/trace",
    "produces": [
        "application/json",
        "application/xml"
    ],
    "apis": [
        {
            "path": "/trace/status",
            "operations": [
                {
                    "method": "GET",
                    "summary": "All/matching trace event status",
                    "notes": "return info and status of the matching trace events",
                    "responseClass": "List[TraceEventInfo]",
                    "nickname": "getTraceEventStatus",
                    "produces": [
                        "application/json",
                        "application/xml"
                    ],
                    "parameters": [
                        {
                            "name": "match",
                            "description": "Match regular expression to match event ids against",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "query"
                        }
                    ],
                    "deprecated": "false"
                },
                {
                    "method": "POST",
                    "summary": "Change all/matching trace event status",
                    "notes": "Modify status for matching events and return previous state",
                    "responseClass": "List[TraceEventInfo]",
                    "nickname": "setTraceEventStatus",
                    "produces": [
                        "application/json",
                        "application/xml"
                    ],
                    "parameters": [
                        {
                            "name": "match",
                            "description": "Match regular expression to match event ids against",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "query"
                        },
                        {
                            "name": "enabled",
                            "description": "Event enabled",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "boolean",
                            "paramType": "query"
                        },
                        {
                            "name": "backtrace",
                            "description": "Event generates backtrace",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "boolean",
                            "paramType": "query"
                        }
                    ],
                    "deprecated": "false"
                }
            ]
        },
        {
            "path": "/trace/event/{eventid}",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Trace event info",
                    "notes": "return the trace event state info",
                    "responseClass": "TraceEventInfo",
                    "nickname": "getSingleTraceEventStatus",
                    "produces": [
                        "application/json",
                        "application/xml"
                    ],
                    "parameters": [
                        {
                            "name": "eventid",
                            "description": "Event ID to query",
                            "required": true,
                            "allowMultiple": true,
                            "dataType": "string",
                            "paramType": "path"
                        }
                    ],
                    "deprecated": "false"
                },
                {
                    "method": "POST",
                    "summary": "Set trace event status",
                    "notes": "Update the trace event settings and return previous state",
                    "responseClass": "TraceEventInfo",
                    "nickname": "setSingleTraceEventStatus",
                    "produces": [
                        "application/json",
                        "application/xml"
                    ],
                    "parameters": [
                        {
                            "name": "eventid",
                            "description": "Event ID to modify",
                            "required": true,
                            "allowMultiple": true,
                            "dataType": "string",
                            "paramType": "path"
                        },
                        {
                            "name": "enabled",
                            "description": "Event enabled",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "boolean",
                            "paramType": "query"
                        },
                        {
                            "name": "backtrace",
                            "description": "Event generates backtrace",
                            "required": false,
                            "allowMultiple": false,
                            "dataType": "boolean",
                            "paramType": "query"
                        }
                    ],
                    "deprecated": "false"
                }
            ]
        }
    ],
    "models" : {
        "TraceEventInfo" : {
            "description" : "trace event info",
            "properties": {
                "name":  {
                    "type": "string",
                    "description": "event name"
                },
                "id": {
                    "type": "string",
                    "description": "trace event id"
                },
                "enabled": {
                    "type": "boolean",
                    "description": "event enabled"
                },
                "backtrace": {
                    "type": "boolean",
                    "description": "generate backtrace when sampled"
                }
            }
        }
    }
}
