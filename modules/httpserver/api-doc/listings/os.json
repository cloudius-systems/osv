        {
            "path": "/os/memory/free",
            "operations": [
                {
                    "method": "GET",
                    "summary": "return OS Free Virtual Memory in bytes",
                    "notes": "",
                    "responseClass": "long",
                    "nickname": "getFreeVirtualMemory",
                    "produces": [
                        "application/json",
                        "application/xml"
                    ],
                    "parameters": [
                    ],
                    "deprecated": "false"
                }
            ]
        },
        {
            "path": "/os/shutdown",
            "operations": [
                {
                    "method": "POST",
                    "summary": "shutdown the OS",
                    "notes": "",
                    "responseClass": "",
                    "nickname": "shutdown",
                    "parameters": [
