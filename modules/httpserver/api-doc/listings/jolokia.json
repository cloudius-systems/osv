{
    "apiVersion": "0.0.1",
    "swaggerVersion": "1.2",
    "basePath": "http://{{Host}}",
    "resourcePath": "/jolokia",
    "produces": [
        "application/json",
        "application/xml"
    ],
    "apis": [
        {
            "path": "/jolokia/{query}",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Jolokia GET request",
                    "notes" : "Query JVM MBean infomration. Example query: read/java.lang:type=Memory/HeapMemoryUsage/used",
                    "responseClass": "string",
                    "nickname": "getJolokia",
                    "produces": [
                        "application/json",
                        "application/xml"
                    ],
                    "parameters": [
                        {
                            "name": "query",
                            "description": "Jolokia query string",
                            "required": true,
                            "allowMultiple": true,
                            "dataType": "string",
                            "paramType": "path"
                        }
                    ],
                    "deprecated": "false"
                }
            ]
        },
        {
            "path": "/jolokia",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Jolokia GET request (Alt)",
                    "notes": "Query JVM MBean infomration. Example query: read/java.lang:type=Memory/HeapMemoryUsage/used",
                    "responseClass": "string",
                    "nickname": "getJolokiaAlt",
                    "produces": [
                        "application/json",
                        "application/xml"
                    ],
                    "parameters": [
                        {
                            "name": "p",
                            "description": "Jolokia alternate query string",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "query"
                        }
                    ],
                    "deprecated": "false"
                },
                {
                    "method": "POST",
                    "summary": "Jolokia POST request",
                    "notes": "Query JVM MBean infomration. More <a href=\"http://www.jolokia.org/reference/html/protocol.html\">here</a>",
                    "responseClass": "string",
                    "nickname": "postJolokia",
                    "produces": [
                        "application/json",
                        "application/xml"
                    ],
                    "parameters": [
                        {
                            "name": "body",
                            "description": "Jolokia query",
                            "required": true,
                            "dataType": "string",
                            "paramType": "body"
                        }
                    ],
                    "deprecated": "false"
                }
            ]
        }
    ]
}
